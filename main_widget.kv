#:kivy 1.10.0
#:import Factory kivy.factory.Factory
#:import RootWidget RootWidget.RootWidget
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import ScrollItem scrollitem.ScrollItem

RootWidget:
    rows: 2
    orientation: 'vertical'

    ScreenManager:
        id: sm
        transition: SlideTransition(direction='right')

        Screen:
            name: 'screen1'
            canvas.before:
                Color:
                    rgb: .8, .8, .8
                Rectangle:
                    size: self.size

            BoxLayout:
                orientation: 'vertical'
                Button:
#                    size_hint: None, None
#                    size: '150dp', '48dp'
                    text: 'Start'
                    on_release:
                        sm.transition = SlideTransition(direction='left')
                        sm.current = 'conversion_screen'
                Button:
#                    size_hint: None, None
#                    size: '150dp', '48dp'
                    text: 'Go to screen 2'
                    on_release:
                        sm.transition = SlideTransition(direction='left')
                        sm.current = 'conversion_screen'
                Button:
#                    size_hint: None, None
#                    size: '150dp', '48dp'
                    text: 'Go to screen 2'
                    on_release:
                        sm.transition = SlideTransition(direction='left')
                        sm.current = 'conversion_screen'

        Screen:
            name: 'conversion_screen'
            canvas.before:
                Color:
                    rgb: .2, .8, .2
                Rectangle:
                    size: self.size
            FloatLayout:

                BoxLayout:
                    id: url_box
                    orientation: 'horizontal'
                    size_hint: .9, .05
                    pos_hint: {'center_x': 0.5, 'center_y': 0.8}

                    TextInput:
                        id: url_text
                        size_hint: .8, 1

                    Button:
                        size_hint: .2, 1
                        text: '22'
                        on_release:
                            scroll_layout.add_widget(ScrollItem(url_text.text))
                            url_text.text = ''

                ScrollView:
                    size_hint: .9, .5
                    pos_hint: {'center_x': 0.5, 'y': 0.25}

                    GridLayout:
                        id: scroll_layout
                        padding: 20
                        spacing: 10
                        cols: 1
                        size_hint_y:  None
                        # set the height of the layout to the combined height of the children
                        height: self.minimum_height






                ProgressBar:
                    size_hint: .9, .2
                    pos_hint: {'center_x': 0.5, 'y': 0.10}
                    value: 70

                Button:
                    size_hint: .25, .1
                    pos_hint: {'center_x': 0.5, 'y': 0.05}
                    text: 'Back'
                    on_release:
                        sm.transition = SlideTransition(direction='right')
                        sm.current = 'screen1'
