#:kivy 1.10.0
#:import Factory kivy.factory.Factory
#:import SettingsScreen SettingsScreen.SettingsScreen
#:import ScrollItem scrollitem.ScrollItem


<SettingsScreen>:
    id: settings_screen
    canvas.before:
        Color:
            rgb: .2, .8, .2
        Rectangle:
            size: self.size
    FloatLayout:

        BoxLayout:
            id: url_box
            orientation: 'horizontal'
            size_hint: .9, .05
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}

            Label:
                id: enable_dots
                text: 'Lacz kropki'
                size_hint: .8, 1

            Button:
                size_hint: .2, 1
                text: 'Change'
                on_release:
                    print(enable_dots.text)

        Button:
            size_hint: .25, .1
            pos_hint: {'center_x': 0.5, 'y': 0.05}
            text: 'Back'
            on_release:
                settings_screen.parent.transition = SlideTransition(direction='right')
                settings_screen.parent.current = 'screen1'
