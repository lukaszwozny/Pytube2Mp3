#:kivy 1.10.0
#:import Factory kivy.factory.Factory
#:import SettingsScreen SettingsScreen.SettingsScreen
#:import ScrollItem scrollitem.ScrollItem
#:import SettingsEntries ui.SettingsEntries.SettingsEntries


<SettingsScreen>:
    id: settings_screen
    canvas.before:
        Color:
            rgb: .2, .8, .2
        Rectangle:
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        SettingsEntries:
            id: settings_entries
            save_button: save_button

        BoxLayout:
            Button:
                height: 50
                size_hint_y: None
                text: 'Back'
                on_release:
                    ConfigManager.load()
                    settings_entries.update_label()
                    save_button.disabled = True
                    settings_screen.parent.transition = SlideTransition(direction='right')
                    settings_screen.parent.current = 'screen1'
            Button:
                id: save_button
                height: 50
                size_hint_y: None
                text: 'Save'
                disabled: True
                on_release:
                    ConfigManager.save()
                    self.disabled = True
