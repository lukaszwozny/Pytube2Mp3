#:kivy 1.10.0
#:import Factory kivy.factory.Factory
#:import RootWidget RootWidget.RootWidget
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import ScrollItem scrollitem.ScrollItem
#:import ConversionScreen ConversionScreen.ConversionScreen
#:import SettingsScreen SettingsScreen.SettingsScreen

RootWidget:
    rows: 2
    orientation: 'vertical'

    ScreenManager:
        id: sm
        transition: SlideTransition(direction='right')

        Screen:
            name: 'screen1'
            canvas.before:
                Color:
                    rgb: .8, .8, .8
                Rectangle:
                    size: self.size

            FloatLayout:

                Button:
                    size_hint: .5, .2
                    pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                    text: 'Start'
                    on_release:
                        sm.transition = SlideTransition(direction='left')
                        sm.current = 'conversion_screen'
                Button:
                    size_hint: .5, .2
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    text: 'Settings'
                    on_release:
                        sm.transition = SlideTransition(direction='left')
                        sm.current = 'settings_screen'
                Button:
                    size_hint: .5, .2
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                    text: 'Quit'
                    on_release:
                        app.stop()

        ConversionScreen:
            name: 'conversion_screen'

        SettingsScreen:
            name: 'settings_screen'